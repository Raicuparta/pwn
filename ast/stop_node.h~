#ifndef __PWN_AST_EXPRESSION_STOP_H__
#define __PWN_AST_EXPRESSION_STOP_H__

#include <cdk/ast/unary_expression_node.h>

namespace pwn {

  /**
   * Class for describing the negation operator
   */
  class stop_node: public cdk::unary_expression_node {
  public:
    inline stop_node(int lineno, pwn::lvalue_node *argument) :
        cdk::unary_expression_node(lineno, arg) {
    }

    /**
     * @param sp semantic processor visitor
     * @param level syntactic tree level
     */
    void accept(basic_ast_visitor *sp, int level) {
      sp->do_neg_node(this, level);
    }

  };

} // pwn

#endif
